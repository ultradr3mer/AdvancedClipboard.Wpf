<Window x:Class="AdvancedClipboard.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d"
                 Title="Advanced Clipboard" Height="800" Width="450" Loaded="MetroWindowLoaded" Closing="MetroWindowClosing" Icon="/AdvancedClipboard.Wpf;component/clipboardicon.ico" Background="Transparent">
  <WindowChrome.WindowChrome>
    <WindowChrome GlassFrameThickness="-1" />
  </WindowChrome.WindowChrome>
  <Grid Background="#99535353">
    <Grid.RowDefinitions>
      <RowDefinition Height="32" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label Content="Advanced Clipboard" Margin="3"/>
    <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion" />
  </Grid>
  <!--<Grid>
    <ContentControl prism:RegionManager.RegionName="MainRegion" />
  </Grid>-->
</Window>